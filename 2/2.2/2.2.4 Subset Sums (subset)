#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define cout fout
#define cin fin
#define endl '\n'
typedef long long ll;
string FILENAME = "subset";
int main(){
    ifstream fin(FILENAME+".in");
    ofstream fout(FILENAME+".out");
    ll n;
    cin>>n;
    if((n*(n+1)/2)%2==1){//If the sum of all the numbers is odd, then there is no way to divide it into two subgroups of equal sum. 
        cout<<0<<'\n';
        return 0;
    }
    ll target = n*(n+1)/4; //The sum of all numbers is n*(n+1)/2. So, each of our subsets has to be of size n*(n+1)/4. 
    vector<ll> x(target+1);//x[i] represents the number of ways to get a subset with sum i.
    x[0]=1;
    for(ll i = 1; i<=n; i++){
        for(ll j = target; j>=i; j--){
            x[j]+=x[j-i];//Since i is increasing, that means all current subsets don't contain i. Adding i to a subset of size j-i gives us subsets of size j. Thus, we can add the number of subsets with size j-i to the number of subsets of size j.
        }
    }
    cout<<x[target]/2<<'\n';//We divide 2 to avoid double counting, since we are counting the number of "pairs" of subset sums.
    
    return 0;
}
